<h1>Listing futures</h1>

<table>
  <thead>
    <tr>
      <th>Future year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @futures.each do |future| %>
      <tr>
        <td><%= future.future_year %></td>
        <td><%= link_to 'Show', future %></td>
        <td><%= link_to 'Edit', edit_future_path(future) %></td>
        <td><%= link_to 'Destroy', future, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Future', new_future_path %>
